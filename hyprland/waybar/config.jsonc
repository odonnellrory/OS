      "format-bluetooth": "Û∞Ç±{icon} {volume}%\n{format_source}",
      "format-bluetooth-muted": "Û∞Ç± Û∞ùü {volume}%\n{format_source}",
      "format-muted": "Û∞ùü {volume}%\n{format_source}",
      "format-source": "Û∞ç¨ {volume}%",
      "format-source-muted": "Û∞ç≠ {volume}%",
      "format-icons": {
        "headphone": "Û∞ãã",
        "hands-free": "ÓåΩ",
        "headset": "Û∞ãé",
        "phone": "Û∞Ñú",
        "portable": "Û∞¶ß",
        "car": "Û∞Ñã",
        "speaker": "Û∞ìÉ",
        "hdmi": "Û∞°Å",
        "hifi": "Û∞ãå",
