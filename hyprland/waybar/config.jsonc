// Waybar config ‚Äî cleaned to work out-of-the-box without fish, split into clear sections
// Tested profile: Hyprland + NetworkManager + BlueZ + playerctl + pavucontrol + blueman + nm-connection-editor
// Notes:
//  - Replaced custom fish-based modules with built-in ones (e.g., mpris) or neutral actions
//  - Kept icons/formatting from your original
//  - Safe commands on click open GUIs instead of shell toggles; swap them later if you want true toggles
//  - JSONC allows comments like these
[
  ////////////////////////////////////////////////////////////////////////
  // TOP BAR
  ////////////////////////////////////////////////////////////////////////
  {
    // ===== Main =====
    "name": "top_bar",
    "layer": "top",
    "position": "top",
    "height": 36,
    "spacing": 4,

    // ===== Layout =====
    "modules-left": ["hyprland/workspaces", "hyprland/submap"],
    "modules-center": [
      "clock#time",
      "custom/separator",
      "clock#week",
      "custom/separator_dot",
      "clock#month",
      "custom/separator",
      "clock#calendar"
    ],
    "modules-right": ["bluetooth", "network", "group/misc", "custom/logout_menu"],

    // ===================== Modules: Hyprland =====================
    "hyprland/workspaces": {
      "on-click": "activate",
      "format": "{icon}",
      "format-icons": {
        "1": "Û∞≤†",
        "2": "Û∞≤¢",
        "3": "Û∞≤§",
        "4": "Û∞≤¶",
        "5": "Û∞≤®",
        "6": "Û∞≤™",
        "7": "Û∞≤¨",
        "8": "Û∞≤Æ",
        "9": "Û∞≤∞",
        "10": "Û∞ø¨",
        "special": "ÔÜí"
      },
      "show-special": true,
      "persistent-workspaces": {
        "*": 10
      }
    },

    "hyprland/submap": {
      "format": "<span color='#a6da95'>Mode:</span> {}",
      "tooltip": false
    },

    // ===================== Modules: Clocks =====================
    "clock#time": {
      "format": "{:%I:%M %p %Ez}"
    },

    "custom/separator": { "format": "|", "tooltip": false },
    "custom/separator_dot": { "format": "‚Ä¢", "tooltip": false },

    "clock#week": { "format": "{:%a}" },
    "clock#month": { "format": "{:%h}" },

    "clock#calendar": {
      "format": "{:%F}",
      "tooltip-format": "<tt><small>{calendar}</small></tt>",
      "actions": { "on-click-right": "mode" },
      "calendar": {
        "mode": "month",
        "mode-mon-col": 3,
        "weeks-pos": "right",
        "on-scroll": 1,
        "on-click-right": "mode",
        "format": {
          "months": "<span color='#f4dbd6'><b>{}</b></span>",
          "days": "<span color='#cad3f5'><b>{}</b></span>",
          "weeks": "<span color='#c6a0f6'><b>W{}</b></span>",
          "weekdays": "<span color='#a6da95'><b>{}</b></span>",
          "today": "<span color='#8bd5ca'><b><u>{}</u></b></span>"
        }
      }
    },

    // ===================== Modules: Bluetooth / Network =====================
    "bluetooth": {
      "format": "Û∞ÇØ",
      "format-disabled": "Û∞Ç≤",
      "format-connected": "Û∞Ç± {device_alias}",
      "format-connected-battery": "Û∞Ç± {device_alias} (Û∞•â {device_battery_percentage}%)",
      "tooltip-format": "{controller_alias}\t{controller_address} ({status})\n\n{num_connections} connected",
      "tooltip-format-disabled": "bluetooth off",
      "tooltip-format-connected": "{controller_alias}\t{controller_address} ({status})\n\n{num_connections} connected\n\n{device_enumerate}",
      "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
      "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t({device_battery_percentage}%)",
      "max-length": 35,
      // Open a manager instead of fish toggle; swap to a toggle script later if you prefer
      "on-click": "blueman-manager",
      "on-click-right": "bluetoothctl devices Connected"
    },

    "network": {
      "format": "Û∞§≠",
      "format-wifi": "{icon}({signalStrength}%){essid}",
      "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"],
      "format-disconnected": "Û∞§´ Disconnected",
      "tooltip-format": "wifi <span color='#ee99a0'>off</span>",
      "tooltip-format-wifi": "SSID: {essid}({signalStrength}%), {frequency} MHz\nInterface: {ifname}\nIP: {ipaddr}\nGW: {gwaddr}\n\n<span color='#a6da95'>Ó™°{bandwidthUpBits}</span>\t<span color='#ee99a0'>Ó™ö{bandwidthDownBits}</span>\t<span color='#c6a0f6'>Û∞ππ{bandwidthTotalBits}</span>",
      "tooltip-format-disconnected": "<span color='#ed8796'>disconnected</span>",
      "max-length": 35,
      // Open NM editor; replace with a bash toggle later if you want
      "on-click": "nm-connection-editor",
      "on-click-right": "alacritty -e btop"
    },

    // ===================== Modules: Misc group (no fish) =====================
    "group/misc": {
      "orientation": "horizontal",
      "modules": [
        // Built-ins that don't need fish scripts
        "privacy",
        "mpris",
        "idle_inhibitor"
      ]
    },

    // Privacy indicators (audio-in, screenshare)
    "privacy": {
      "icon-spacing": 1,
      "icon-size": 12,
      "transition-duration": 250,
      "modules": [{ "type": "audio-in" }, { "type": "screenshare" }]
    },

    // MPRIS media (replaces custom/media fish JSON)
    "mpris": {
      "format": "{player_icon}{status_icon}",
      "format-paused": "{player_icon}Ôäã",
      "format-playing": "{player_icon}ÔÖÑ",
      "player-icons": { "default": "Û∞éà" },
      "on-click": "playerctl play-pause",
      "on-click-right": "playerctl next",
      "on-click-middle": "playerctl previous",
      "on-scroll-up": "playerctl volume 0.05+",
      "on-scroll-down": "playerctl volume 0.05-"
    },

    // Idle inhibitor
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": { "activated": "Û∞õê", "deactivated": "Û∞õë" },
      "tooltip-format-activated": "idle-inhibitor <span color='#a6da95'>on</span>",
      "tooltip-format-deactivated": "idle-inhibitor <span color='#ee99a0'>off</span>",
      "start-activated": true
    },

    // Simple logout launcher (no fish)
    "custom/logout_menu": {
      "return-type": "json",
      "exec": "echo '{ \"text\":\"Û∞ê•\", \"tooltip\": \"logout / power menu\" }'",
      "interval": "once",
      "on-click": "wlogout || pkill -SIGUSR1 swaylock || hyprctl dispatch exit 0"
    }
  },

  ////////////////////////////////////////////////////////////////////////
  // BOTTOM BAR
  ////////////////////////////////////////////////////////////////////////
  {
    // ===== Main =====
    "name": "bottom_bar",
    "layer": "top",
    "position": "bottom",
    "height": 36,
    "spacing": 4,

    // ===== Layout =====
    "modules-left": ["user"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["keyboard-state", "hyprland/language"],

    // ===================== Modules =====================
    "hyprland/window": { "format": "{title}", "max-length": 50 },

    "hyprland/language": {
      "format-en": "üá∫üá∏ ENG (US)",
      "format-uk": "üá∫üá¶ UKR",
      "format-ru": "üá∑üá∫ RUS",
      // If this device name differs on your box, adjust via `hyprctl devices -j`
      "keyboard-name": "at-translated-set-2-keyboard",
      "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next"
    },

    "keyboard-state": {
      "capslock": true,
      "format": "{name} {icon}",
      "format-icons": { "locked": "Û∞åæ", "unlocked": "Û∞çÄ" }
    },

    "user": {
      "format": " <span color='#8bd5ca'>{user}</span> (up <span color='#f5bde6'>{work_d} d</span> <span color='#8aadf4'>{work_H} h</span> <span color='#eed49f'>{work_M} min</span> <span color='#a6da95'>‚Üë</span>)",
      "icon": true
    }
  },

  ////////////////////////////////////////////////////////////////////////
  // LEFT BAR (VERTICAL DASH) ‚Äî optional, comment out if you don‚Äôt want it
  ////////////////////////////////////////////////////////////////////////
  {
    // ===== Main =====
    "name": "left_bar",
    "layer": "top",
    "position": "left",
    "spacing": 4,
    "width": 75,
    "margin-top": 10,
    "margin-bottom": 10,

    // ===== Layout =====
    "modules-left": ["wlr/taskbar"],
    "modules-center": [
      "cpu",
      "memory",
      "disk",
      "temperature",
      "battery",
      "backlight",
      "pulseaudio",
      "systemd-failed-units"
    ],
    "modules-right": ["tray"],

    // ===================== Modules: Apps & Tray =====================
    "wlr/taskbar": {
      "format": "{icon}",
      "icon-size": 20,
      "icon-theme": "Numix-Circle",
      "tooltip-format": "{title}",
      "on-click": "activate",
      "on-click-right": "close",
      "on-click-middle": "fullscreen"
    },

    "tray": { "icon-size": 20, "spacing": 2 },

    // ===================== Modules: System Stats =====================
    "cpu": {
      "format": "Û∞ª†{usage}%",
      "states": { "high": 90, "upper-medium": 70, "medium": 50, "lower-medium": 30, "low": 10 },
      "on-click": "alacritty -e btop",
      "on-click-right": "alacritty -e btm"
    },

    "memory": {
      "format": "Û∞çõ{percentage}%",
      "tooltip-format": "Main: ({used} GiB/{total} GiB)({percentage}%), available {avail} GiB\nSwap: ({swapUsed} GiB/{swapTotal} GiB)({swapPercentage}%), available {swapAvail} GiB",
      "states": { "high": 90, "upper-medium": 70, "medium": 50, "lower-medium": 30, "low": 10 },
      "on-click": "alacritty -e btop",
      "on-click-right": "alacritty -e btm"
    },

    "disk": {
      "format": "Û∞ãä{percentage_used}%",
      "tooltip-format": "({used}/{total})({percentage_used}%) in '{path}', available {free}({percentage_free}%)",
      "states": { "high": 90, "upper-medium": 70, "medium": 50, "lower-medium": 30, "low": 10 },
      "on-click": "alacritty -e btop",
      "on-click-right": "alacritty -e btm"
    },

    "temperature": {
      "tooltip": false,
      // If this thermal zone is wrong for your machine, try removing this key or using `ls /sys/class/thermal/thermal_zone*/temp`
      "thermal-zone": 8,
      "critical-threshold": 80,
      "format": "{icon}{temperatureC}Û∞îÑ",
      "format-critical": "üî•{icon}{temperatureC}Û∞îÑ",
      "format-icons": ["Óº´", "Óº™"]
    },

    "battery": {
      "states": { "high": 90, "upper-medium": 70, "medium": 50, "lower-medium": 30, "low": 10 },
      "format": "{icon}{capacity}%",
      "format-charging": "Û±êã{icon}{capacity}%",
      "format-plugged": "Û∞ö•{icon}{capacity}%",
      "format-time": "{H} h {M} min",
      "format-icons": ["Û±Éç", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
      "tooltip-format": "{timeTo}"
    },

    "backlight": {
      "format": "{icon}{percent}%",
      "format-icons": [
        "Û∞å∂",
        "Û±©é",
        "Û±©è",
        "Û±©ê",
        "Û±©ë",
        "Û±©í",
        "Û±©ì",
        "Û±©î",
        "Û±©ï",
        "Û±©ñ",
        "Û∞õ®"
      ],
      "tooltip": false,
      "states": { "high": 90, "upper-medium": 70, "medium": 50, "lower-medium": 30, "low": 10 },
      "reverse-scrolling": true,
      "reverse-mouse-scrolling": true
    },

    "pulseaudio": {
      "states": { "high": 90, "upper-medium": 70, "medium": 50, "lower-medium": 30, "low": 10 },
      "tooltip-format": "{desc}",
      "format": "{icon}{volume}%\n{format_source}",
      "format-bluetooth": "Û∞Ç±{icon}{volume}%\n{format_source}",
      "format-bluetooth-muted": "Û∞Ç±Û∞ùü{volume}%\n{format_source}",
      "format-muted": "Û∞ùü{volume}%\n{format_source}",
      "format-source": "Û∞ç¨{volume}%",
      "format-source-muted": "Û∞ç≠{volume}%",
      "format-icons": {
        "headphone": "Û∞ãã",
        "hands-free": "ÓåΩ",
        "headset": "Û∞ãé",
        "phone": "Û∞Ñú",
        "portable": "Û∞¶ß",
        "car": "Û∞Ñã",
        "speaker": "Û∞ìÉ",
        "hdmi": "Û∞°Å",
        "hifi": "Û∞ãå",
        "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
      },
      "reverse-scrolling": true,
      "reverse-mouse-scrolling": true,
