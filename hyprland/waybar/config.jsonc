[
  ////////////////////////////////////////////////////////////////////////
  // TOP BAR
  ////////////////////////////////////////////////////////////////////////
  {
    // ===== Main =====
    "name": "top_bar",
    "layer": "top",
    "position": "top",
    "height": 36,
    "spacing": 4,

    // ===== Layout =====
    "modules-left": ["hyprland/workspaces", "hyprland/submap"],
    "modules-center": [
      //"clock#time",
      //"custom/separator",
      "clock#week",
      "custom/separator_dot",
      "clock#month",
      "custom/separator",
      "clock#calendar"
    ],
    "modules-right": ["cpu",
      "memory",
      "disk", "bluetooth", "network", "group/tray_toggle", "custom/logout_menu"],

    // ===== Tray toggle group =====
    "group/tray_toggle": {
      "orientation": "horizontal",
      "modules": [
      "tray" 
      ],
      "drawer": {
        "transition-duration": 150,
        "transition-left-to-right": false
      },
      "format": "Û∞ç°",          // icon shown on the bar
      "on-click": "toggle",
      "start-collapsed": true
    },

    // The actual tray shown/hidden by the group
    "tray": { "icon-size": 20, "spacing": 2 },

    // ===================== Modules: Hyprland =====================
    "hyprland/workspaces": {
      "on-click": "activate",
      "format": "{icon}",
      "format-icons": {
        "1": "‰∏Ä", "2": "‰∫å", "3": "‰∏â", "4": "Âõõ", "5": "‰∫î",
        "6": "ÂÖ≠", "7": "‰∏É", "8": "ÂÖ´", "9": "‰πù", "10": "ÂçÅ",
        "special": "„Äá", "11": "ÂçÅ‰∏Ä",
  "12": "ÂçÅ‰∫å",
  "13": "ÂçÅ‰∏â",
  "14": "ÂçÅÂõõ",
  "15": "ÂçÅ‰∫î",
  "16": "ÂçÅÂÖ≠",
  "17": "ÂçÅ‰∏É",
  "18": "ÂçÅÂÖ´",
  "19": "ÂçÅ‰πù",
  "20": "‰∫åÂçÅ"
      },
      "show-special": true,
      "persistent-workspaces": { "*": 10 }
    },

    "hyprland/submap": {
      "format": "<span color='#a6da95'>Mode:</span> {}",
      "tooltip": false
    },

    // ===================== Modules: Clocks =====================
    "clock#time": { "format": "{:%I:%M %p %Ez}" },
    "custom/separator": { "format": "|", "tooltip": false },
    "custom/separator_dot": { "format": "‚Ä¢", "tooltip": false },
    "clock#week": { "format": "{:%a}" },
    "clock#month": { "format": "{:%h}" },
    "clock#calendar": {
      "format": "{:%F}",
      "tooltip-format": "<tt><small>{calendar}</small></tt>",
      "actions": { "on-click-right": "mode" },
      "calendar": {
        "mode": "month",
        "mode-mon-col": 3,
        "weeks-pos": "right",
        "on-scroll": 1,
        "on-click-right": "mode",
        "format": {
          "months": "<span color='#f4dbd6'><b>{}</b></span>",
          "days": "<span color='#cad3f5'><b>{}</b></span>",
          "weeks": "<span color='#c6a0f6'><b>W{}</b></span>",
          "weekdays": "<span color='#a6da95'><b>{}</b></span>",
          "today": "<span color='#8bd5ca'><b><u>{}</u></b></span>"
        }
      }
    },

    // ===================== Modules: Bluetooth / Network =====================
    "bluetooth": {
      "format": "BT",
      "format-disabled": "BT: OFF",
      "format-connected": "BT CONNECTED: {device_alias}",
      "format-connected-battery": "Û∞Ç± {device_alias} (Û∞•â {device_battery_percentage}%)",
      "tooltip-format": "{controller_alias}\t{controller_address} ({status})\n\n{num_connections} connected",
      "tooltip-format-disabled": "bluetooth off",
      "tooltip-format-connected": "{controller_alias}\t{controller_address} ({status})\n\n{num_connections} connected\n\n{device_enumerate}",
      "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
      "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t({device_battery_percentage}%)",
      "max-length": 35,
      "on-click": "blueman-manager",
      "on-click-right": "bluetoothctl devices Connected"
    },

    "network": {
      "format": "Wi-Fi",
      "format-wifi": "{icon}({signalStrength}%){essid}",
      "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"],
      "format-disconnected": "Û∞§´ Disconnected",
      "tooltip-format": "wifi <span color='#ee99a0'>off</span>",
      "tooltip-format-wifi": "SSID: {essid}({signalStrength}%), {frequency} MHz\nInterface: {ifname}\nIP: {ipaddr}\nGW: {gwaddr}\n\n<span color='#a6da95'>Ó™°{bandwidthUpBits}</span>\t<span color='#ee99a0'>Ó™ö{bandwidthDownBits}</span>\t<span color='#c6a0f6'>Û∞ππ{bandwidthTotalBits}</span>",
      "tooltip-format-disconnected": "<span color='#ed8796'>disconnected</span>",
      "max-length": 35,
      "on-click": "nm-connection-editor",
      "on-click-right": ""
    },




    "cpu": {
      "format": "CPU {usage}%",
      "states": { "high": 90, "upper-medium": 70, "medium": 50, "lower-medium": 30, "low": 10 }
    },

    "memory": {
      "format": "RAM {percentage}%",
      "tooltip-format": "Main: ({used} GiB/{total} GiB)({percentage}%), available {avail} GiB\nSwap: ({swapUsed} GiB/{swapTotal} GiB)({swapPercentage}%), available {swapAvail} GiB",
      "states": { "high": 90, "upper-medium": 70, "medium": 50, "lower-medium": 30, "low": 10 }
    },

    "disk": {
      "format": "DISK {percentage_used}%",
      "tooltip-format": "({used}/{total})({percentage_used}%) in '{path}', available {free}({percentage_free}%)",
      "states": { "high": 90, "upper-medium": 70, "medium": 50, "lower-medium": 30, "low": 10 }
    },



    // ===================== Modules: Simple logout =====================
    "custom/logout_menu": {
      "return-type": "json",
      "exec": "echo '{ \"text\":\"Û∞ê•\", \"tooltip\": \"logout / power menu\" }'",
      "interval": "once",
      "on-click": "wlogout || pkill -SIGUSR1 swaylock || hyprctl dispatch exit 0"
    }
  },

  ////////////////////////////////////////////////////////////////////////
  // BOTTOM BAR
  ////////////////////////////////////////////////////////////////////////
  {
    "name": "bottom_bar",
    "layer": "top",
    "position": "bottom",
    "height": 36,
    "spacing": 4,

    "modules-left": ["user"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["hyprland/language"],

    "hyprland/window": { "format": "{title}", "max-length": 50 },

    "hyprland/language": {
      "format-en": "Û±ÑÖ  Nix OS | ENG (UK)",
      "keyboard-name": "at-translated-set-2-keyboard",
      "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next"
    },

    "user": {
      "format": " <span color='#8bd5ca'>{user}</span> UPTIME: <span color='#eed49f'>{work_M}M</span> <span color='#8aadf4'>{work_H}H</span> <span color='#f5bde6'>{work_d}D</span>",
      "icon": true
    }
  },

  ////////////////////////////////////////////////////////////////////////
  // LEFT BAR (VERTICAL DASH)
  ////////////////////////////////////////////////////////////////////////
  {
    "name": "left_bar",
    "layer": "top",
    "position": "left",
    "spacing": 4,
    "width": 75,
    "margin-top": 10,
    "margin-bottom": 10,

    "modules-left": ["wlr/taskbar"],
    "modules-center": [
      "temperature",
      "battery",
      "backlight",
      "pulseaudio",
      "systemd-failed-units"
    ],
    "modules-right": [],

    "wlr/taskbar": {
      "format": "{icon}",
      "icon-size": 20,
      "icon-theme": "Numix-Circle",
      "tooltip-format": "{title}",
      "on-click": "activate",
      "on-click-right": "close",
      "on-click-middle": "fullscreen"
    },


    "temperature": {
      "tooltip": false,
      "thermal-zone": 8,
      "critical-threshold": 80,
      "format": "{icon} {temperatureC}Û∞îÑ",
      "format-critical": "üî•{icon}{temperatureC}Û∞îÑ",
      "format-icons": ["Óº´", "Óº™"]
    },

    "battery": {
      "states": { "high": 90, "upper-medium": 70, "medium": 50, "lower-medium": 30, "low": 10 },
      "format": "{icon} {capacity}%",
      "format-charging": "Û±êã {icon}{capacity}%",
      "format-plugged": "Û∞ö• {icon}{capacity}%",
      "format-time": "{H} h {M} min",
      "format-icons": ["Û±Éç","Û∞Å∫","Û∞Åª","Û∞Åº","Û∞ÅΩ","Û∞Åæ","Û∞Åø","Û∞ÇÄ","Û∞ÇÅ","Û∞ÇÇ","Û∞Åπ"],
